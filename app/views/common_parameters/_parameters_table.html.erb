<div class="tab-pane" id="params">
  <div class="tab-content">
    <ul class="nav nav-tabs" data-tabs="tabs">
      <li class="active"><a href="#puppet_parameters" data-toggle="tab"><%= _('Puppet Parameters') %></a></li>
      <li><a href="#global_parameters" data-toggle="tab"><%= _('Global Parameters') %></a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="puppet_parameters">
        <h4><%= _('Puppet classes Parameters') %></h4>

        <p></p>
        <%= render "puppetclasses/classes_parameters", { :obj => obj } %>

        <p></p>
        <%= render "common_parameters/puppetclasses_parameters", :f => f %>
      </div>

      <div class="tab-pane" id="global_parameters">
        <h4><%= _('Included Parameters via inheritance') %></h4>
        <%= render "common_parameters/inherited_parameters", { :inherited_parameters => inherited_parameters } %>
        <p></p>

        <h4><%= _('Host Parameters') %></h4>

        <p></p>
        <%= render "common_parameters/parameters", { :f => f, :type => :host_parameters } %>
      </div>
    </div>
  </div>


</div>